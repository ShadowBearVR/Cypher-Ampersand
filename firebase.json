{
  "hosting": {
    "public": "static",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "useful-commands.txt"
    ],

    "rewrites": [{
      "source": "**",
      "run": {
        "serviceId": "api",
        "region": "us-central1"
      }
    }],

    "cleanUrls": true,

    "trailingSlash": false
  }
}
